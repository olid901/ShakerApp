    app:startDestination="@+id/nav_popular">

    <fragment
        android:id="@+id/nav_popular"
        android:name="de.diebois.shakerapp.ui.fragment.BigCocktailFragment"
        android:label="@string/popular_drinks"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_favorite"
        android:name="de.diebois.shakerapp.ui.fragment.FavoriteCocktailFragment"
        android:label="@string/saved_drinks"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_all_drinks"
        android:name="de.diebois.shakerapp.ui.fragment.SmallCocktailFragment"
        android:label="@string/all_drinks"
        tools:layout="@layout/fragment_all_cocktails" />

    <fragment
        android:id="@+id/nav_ingredients"
